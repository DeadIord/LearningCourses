@model QuestionViewModel

<h1>Add Question</h1>

<form asp-action="SaveQuestion" method="post">
    <input type="hidden" name="TestId" value="@Model.TestId" />

    <div class="form-group">
        <label asp-for="Content">Question</label>
        <input class="form-control" asp-for="Content" />
    </div>

    <div class="form-group">
        <label>Answers</label>
    </div>

    @for (int i = 0; i < Model.Answers.Count; i++)
    {
        <div class="form-group">
            <input type="text" class="form-control" name="Answers[@i].Content" placeholder="Answer" />
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="Answers[@i].IsCorrect" value="true" />
                <label class="form-check-label">Correct</label>
            </div>
        </div>
    }

    <div class="form-group">
        <button type="submit" class="btn btn-primary" name="action" value="save">Save</button>
        <button type="submit" class="btn btn-primary" name="action" value="continue">Continue</button>
    </div>
</form>
