@model ICollection<Grades>

<h1>Tests</h1>

<table class="table">
    <thead>
        <tr>
            <th>Пользователь</th>
            <th>Оценка</th>
            <th>Дата прохождения</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var test in Model)
        {
            <tr>
                <td>@test.ApplicationUser.Name @test.ApplicationUser.Surname @test.ApplicationUser.Patronymic</td>
                <td>@test.GradeValue</td>
                <td>
                    @if (test.DateOfPassage != null)
                    {
                        @test.DateOfPassage
                    }
                    
                </td>
            </tr>
        }
    </tbody>
</table>
