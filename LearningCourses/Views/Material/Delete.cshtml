@model Material

<h2>Delete Material</h2>

<div>
    <h4>Are you sure you want to delete this material?</h4>
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Model.Title</dd>
        <dt>Contents</dt>
        <dd>@Model.Contents</dd>
        <dt>File URL</dt>
        <dd>@Model.FileUrl</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Material", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="id" value="@Model.MaterialId" />

        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Index", "Material", null, new { @class = "btn btn-default" })
    }
</div>
