@model EditUserVM

@{
    ViewBag.Title = "Edit User";
}

<h3>Редактирование пользователя @Model.Surname @Model.Name:</h3>

<form method="post" class="mt-3">
    <div class="card-3d-wrap mx-auto">
        <div class="card-front">
            <div class="center-wrap">
                <div class="form-group row">
                    <label asp-for="Name" style="margin-top:10px" class="col-sm-2 col-form-label">Имя</label>
                    <div class="col-sm-10">
                        <input style="margin-top:10px" asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Surname" class="col-sm-2 col-form-label">Фамилия</label>
                    <div class="col-sm-10">
                        <input asp-for="Surname" class="form-control">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Patronymic" class="col-sm-2 col-form-label">Отчество</label>
                    <div class="col-sm-10">
                        <input asp-for="Patronymic" class="form-control">
                        <span asp-validation-for="Patronymic" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                   <div class="form-group row">
                    <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Номер телефона</label>
                    <div class="col-sm-10">
                        <input asp-for="PhoneNumber" class="form-control">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Роль</label>
                    <div class="col-sm-10">
                        @if (Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <input class="form-control" style="margin-bottom: 16px" disabled asp-for="@role">
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>

                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
   

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Обновить</button>
                        <a asp-action="ListUsers" class="btn btn-primary">Отмена</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</form>